<?xml version="1.0" encoding="utf-8"?>
<!--
Use this template to create a project that builds and imports one or more external projects/solutions.

- Copy this file into your solution directory.
- Rename it to 'importing-project'.Import[s | .exporting-project].vcxproj, for exemple:
  Salaires.Imports.vcxproj,
  Salaires.Import.Swissdec.vcxproj
- Include the 'zou' submodule (https://git.epsitec.ch/Build/zou) into the root of your bundle repository.
- Create a new 'ProjectGUID' value.
- Parameterize the import of the external project.
  Modify the ImportDir and ImportPlatform properties and the ImportProjects items
- Include this modified project into the importing solution.

-->
<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup Label="Globals">
    <!-- The ProjectGUID property value should be redefined. -->
    <ProjectGuid>{B78D246D-F9C7-4635-81EF-6B5C25D1D8E8}</ProjectGuid>
  </PropertyGroup>

  <!-- Assume that the path of the zou submodule is relative to this file directory -->
  
  <!-- Import zou utility project and property sheets -->
  <Import Project="zou\Cpp.Utility.props" />
  
  <ImportGroup Label="PropertySheets" Condition="">
    <!-- Redirect C++ NT Version -->
    <Import Project="$(ZouDir)Cpp.NTVersion.props" />
    <!-- Redirect C++ output directories (OutDir, IntDir) -->
    <Import Project="$(ZouDir)Cpp.OutDir.props" />
  </ImportGroup>

  <Import Project="$(ZouDir)Cpp.Utility.targets" />

  <!--
  Import managed projects or solutions.
  Exemple: salaires excerpt
  -->
  <ItemGroup>
    <ImportProjects Include="..\pain\Epsitec.Pain.Redist.sln">
      <ImportDir>$(OutDir)pain\</ImportDir>
    </ImportProjects>
    <ImportProjects Include="..\partout\SecureForms.Redist.sln">
      <ImportDir>$(OutDir)partout\</ImportDir>
    </ImportProjects>
    <ImportProjects Include="..\swissdec\Net\Swissdec.Redist.sln">
      <ImportDir>$(OutDir)swissdec\</ImportDir>
    </ImportProjects>
    <ImportProjects Include="..\xgen\Epsitec.XGen.Redist.sln">
      <ImportDir>$(OutDir)xgen\</ImportDir>
    </ImportProjects>
  </ItemGroup>
  
  <!-- Import files -->
  <ItemGroup>
    <ImportFiles Include="images\*.png" >
      <ImportDir>$(OutDir)images\</ImportDir>
    </ImportFiles>
  </ItemGroup>

  <Import Project="$(ZouDir)Import.targets" />
</Project>