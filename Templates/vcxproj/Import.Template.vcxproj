<?xml version="1.0" encoding="utf-8"?>
<!--
Use this template to create a project that builds and imports one or more external projects/solutions.

- Copy this file into your solution directory.
- Rename it to 'importing-project'.Import[s | .exporting-project].vcxproj, for exemple:
  Salaires.Imports.vcxproj,
  Salaires.Import.Swissdec.vcxproj
- Include the 'zou' submodule (https://git.epsitec.ch/Build/zou) into the root of your bundle repository.
- Create a new 'ProjectGUID' value.
- Parameterize the export of the external project.
  Modify the ExportDir and ExportPlatform properties and the ExportProjects items
- Include this modified project into the importing solution.

-->
<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup Label="Globals">
    <!-- The ProjectGUID property value should be redefined. -->
    <ProjectGuid>{B78D246D-F9C7-4635-81EF-6B5C25D1D8E8}</ProjectGuid>
    <!-- The 'PlatformToolSet" property can be modified from within the Visual Studio Project Properties dialog. -->
    <PlatformToolset>v140</PlatformToolset>
  </PropertyGroup>
  
  <!-- Assume that the path of the zou submodule is relative to this file directory -->
  <Import Project="zou\Cpp.Utility.Import.targets" />
  <ImportGroup Label="PropertySheets">
    <!-- Redirect C++ output directories (OutDir, IntDir) -->
    <Import Project="zou\Cpp.OutDir.props" />
    <!-- Redirect C++ NT Version -->
    <Import Project="zou\Cpp.NTVersion.props" />
  </ImportGroup>

  <!-- Export external solutions into this project -->
  <PropertyGroup>
    <!-- For example: $(OutDir)services -->
    <ExportDir>local-import-path</ExportDir>
    <!-- For example: 'Any CPU' -->
    <ExportPlatform>external-solution-platform</ExportPlatform>
  </PropertyGroup>
  <ItemGroup>
    <!-- The external solution path relative to this project file.
    For example: Swissdec\Swissdec.Redist.sln -->
    <ExportProjects Include="external-solution-relative-path" />
  </ItemGroup>
  
  <Import Project="zou\Export.targets" />
</Project>