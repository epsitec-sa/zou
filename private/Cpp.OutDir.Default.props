<?xml version="1.0" encoding="utf-8"?>
<!-- This property sheet defines the default 'CppOutDir' and 'CppIntDir' properties for C++ projects. -->
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Choose>
    <When Condition="$(SolutionDir) == '*Undefined*'">
      <PropertyGroup>
        <_PropertySheetDisplayName>[default] CppOutDir = Platform/Toolset/Configuration</_PropertySheetDisplayName>
        <CppOutDir Condition="$(SolutionDir) == '*Undefined*'">$(Platform)\$(PlatformToolset)\$(Configuration)\</CppOutDir>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <_PropertySheetDisplayName>[default] CppOutDir = Solution/Platform/Toolset/Configuration</_PropertySheetDisplayName>
        <CppOutDir Condition="$(SolutionDir) != '*Undefined*'">$(SolutionDir)$(Platform)\$(PlatformToolset)\$(Configuration)\</CppOutDir>
      </PropertyGroup>
    </Otherwise>
  </Choose>
  
  <PropertyGroup>
    <!-- $(ProjectName) is appended to $(CppIntDir) to avoid sharing the intermediate folder between projects located int he same folder -->
    <CppIntDir>$(Platform)\$(PlatformToolset)\obj\$(Configuration)\$(ProjectName)\</CppIntDir>
  </PropertyGroup>
</Project>