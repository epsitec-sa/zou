<?xml version="1.0" encoding="utf-8"?>
<!--
This property sheet resolves the 'OutDir' and 'IntDir' properties (supports override in zou.local folder).
Use the Property Manager to import  it into your project.
-->
<Project ToolsVersion="4.0" InitialTargets="CppOutDirTrace" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Condition="'$(Zou)' == ''">
    <Import Project="private\zou.targets"/>
  </ImportGroup>

  <PropertyGroup>
    <_PropertySheetDisplayName>zou - Output Directories...</_PropertySheetDisplayName>
    
    <!-- Save and empty OutDir -->
    <_PrevOutDir>$(OutDir)</_PrevOutDir>
    <OutDir></OutDir>
  </PropertyGroup> 

  <ImportGroup Label="PropertySheets">
    <Import Condition="'$(OutDir)' == ''" Project="$(ZouBundleDir)**\$(MSBuildThisFile)" />
    <Import Condition="'$(OutDir)' == ''" Project="$(ZouSolutionDir)**\$(MSBuildThisFile)" />
    <Import Condition="'$(OutDir)' == ''" Project="$(ZouProjectDir)**\$(MSBuildThisFile)" />
    <Import Condition="'$(OutDir)' == ''" Project="$(ZouDir)$(MSBuildThisFileName).Default$(MSBuildThisFileExtension)" />
  </ImportGroup>

  <PropertyGroup Condition="'$(OutDir)' == ''">
    <OutDir>$(_PrevOutDir)</OutDir>
  </PropertyGroup>
  
  <Target Name="CppOutDirTrace">
    <Message Text="OutDir=$(OutDir)" />
    <Message Text="IntDir=$(IntDir)" />
  </Target>
</Project>