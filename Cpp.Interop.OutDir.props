<?xml version="1.0" encoding="utf-8"?>
<!-- This property sheet resolves the 'OutDir'property for C++ interop proxy projects (supports override in zou.cfg folder). -->
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
         InitialTargets="CppInteropOutDirTrace">

  <PropertyGroup>
    <_PropertySheetDisplayName>[zou] C++ Interop Directory = $(ProjectDirectory)$(Platform)\Interop\bin\$(Configuration)\</_PropertySheetDisplayName>
    <OutDir Condition="'$(OutDir)' == ''">$(ProjectDirectory)$(Platform)\Interop\bin\$(Configuration)\</OutDir>
  </PropertyGroup>

  <Target Name="CppInteropOutDirTrace">
    <Message Importance="normal" Text="OutDir = $(OutDir)" />
  </Target>
</Project>