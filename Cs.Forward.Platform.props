<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
         InitialTargets="CsForwardPlatformTrace">

  <PropertyGroup>
    <!-- Translate C# agent (C++ utility project) mandatory Win32 platform to C# x86 platform -->
    <ForwardPlatform Condition="'$(ForwardPlatform)' == '' And '$(Platform)' == 'Win32'">x86</ForwardPlatform>
    <ForwardPlatform Condition="'$(ForwardPlatform)' == '' And '$(PlatformSpecified)' == 'true'">$(Platform)</ForwardPlatform>
  </PropertyGroup>

  <Target Name="CsForwardPlatformTrace">
    <Message Importance="normal" Text="ForwardPlatform = $(ForwardPlatform)" />
  </Target>
</Project>