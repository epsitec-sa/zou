<?xml version="1.0" encoding="utf-8"?>
<!-- This property sheet resolves the 'PlatformToolset'property (supports override in zou.cfg folder). -->
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
         InitialTargets="CsPlatformToolsetTrace"
         TreatAsLocalProperty="PlatformToolset">

  <PropertyGroup Label="Globals">
    <!-- Reset property if not specified on the command line (initialise fallback) -->
    <PlatformToolset Condition="'$(PlatformToolsetSpecified)' != 'true'" />
  </PropertyGroup>
  
  <ImportGroup Label="PropertySheets">
    <Import Project="$(ZouBundleDir)**\$(MSBuildThisFileName)*$(MSBuildThisFileExtension)" Condition="Exists('$(ZouBundleDir)**\$(MSBuildThisFileName)*$(MSBuildThisFileExtension)')" />
    <Import Project="$(ZouSolutionDir)**\$(MSBuildThisFileName)*$(MSBuildThisFileExtension)" Condition="Exists('$(ZouSolutionDir)**\$(MSBuildThisFileName)*$(MSBuildThisFileExtension)') And '$(ZouSolutionDir)' != '$(ZouBundleDir)'" />
    <Import Project="$(ZouProjectDir)**\$(MSBuildThisFileName)*$(MSBuildThisFileExtension)"  Condition="Exists('$(ZouProjectDir)**\$(MSBuildThisFileName)*$(MSBuildThisFileExtension)') And '$(ZouProjectDir)'  != '$(ZouSolutionDir)' And '$(ZouProjectDir)' != '$(ZouBundleDir)'" />
    <Import Project="$(ZouPrivateDir)$(MSBuildThisFileName).Default$(MSBuildThisFileExtension)" />
  </ImportGroup>

  <Target Name="CsPlatformToolsetTrace" Condition="'$(ZouTraceProps)' == 'true'">
    <Message Importance="normal" Text="PlatformToolset = $(PlatformToolset)" />
  </Target>
</Project>