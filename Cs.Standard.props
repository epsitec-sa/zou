<?xml version="1.0" encoding="utf-8"?>
<!-- This property imports zou packaging property sheets for C# projects. -->
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Condition="'$(Zou)' == ''" Project="zou.props" />

  <PropertyGroup>
    <_PropertySheetDisplayName Condition="'$(ZouPack)' != 'true' And '$(ZouImport)' != 'true'">[zou] Standard settings</_PropertySheetDisplayName>
    <_PropertySheetDisplayName Condition="'$(ZouPack)'   == 'true'">[zou] Pack settings</_PropertySheetDisplayName>
    <_PropertySheetDisplayName Condition="'$(ZouImport)' == 'true'">[zou] Import settings</_PropertySheetDisplayName>
    
    <!-- Redirect OutDir and IntDir to temp folder to avoid cluttering the solution directory. -->
    <IntDir>$(TMP)\$(ProjectName)\</IntDir>
    <!-- Avoid MSB8029 warning -->
    <IgnoreWarnIntDirInTempDetected>true</IgnoreWarnIntDirInTempDetected>
  </PropertyGroup>

  <!-- WARNING: do not change import order -->
  <ImportGroup Label="PropertySheets">
    <Import Project="$(ZouDir)Com.WorkDir.props" />
    <Import Project="$(ZouDir)Cs.IntDir.props" />
    <Import Project="$(ZouDir)Cs.PkgDir.props" Condition="'$(ZouPack)' == 'true'" />
    <Import Project="$(ZouDir)Cs.OutDir.props" />
  </ImportGroup>  
</Project>