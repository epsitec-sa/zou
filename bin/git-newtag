#! /bin/bash

. zlib-core

while [[ "$#" > 0 ]]; do case "$1" in
  -h|--help) zou-help $0; exit 0;;
  --debug)  debug=true;;
  --local)  local=true;;
  -m|--message) message=$2; shift;;
  -*) io_error "unknown option: $1"; exit 1;;
  *) tag=$1;;
esac; shift; done

[[ -z $message ]] && message==$(git log -1 --pretty=%B)

git tag -a -m "'$message'" "$tag"
[[ $local == true ]] || git push $(git remote) "$tag"
