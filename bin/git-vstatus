#!/bin/bash

[[ -z $ZOUL_GIT_REPO ]]        && . zoul-git-repo
[[ -z $ZOUL_GIT_VTAG ]]        && . zoul-git-vtag
[[ -z $ZOUL_GIT_BRANCH_CORE ]] && . zoul-git-branch-core
[[ -z $ZOUL_GIT_MODULE ]]      && . zoul-git-module

vstatus_parse()
{
  while [[ "$#" > 0 ]]; do case "$1" in
    -h|--help) zou-help $0; exit 0;;
    -q|--quiet)     forOpts+=($1); quiet=true;;
    .)              unset recursive;;
    --alpha)        prerelPrefix='alpha';;
    --beta)         prerelPrefix='beta';;
    --rc)           prerelPrefix='rc';;
    --rtm)          prerelPrefix='rtm';;
    --debug)        debug=true;;
    -*)             forOpts+=($1);;
    *) ref=$1;;
  esac; shift; done
}
vstatus_run()
{
  local quiet recursive prerelPrefix forOpts=() ref recursive=true
  vstatus_parse "$@" || return $?

  if [[ $recursive == true ]]; then
    . git-for -q "${forOpts[@]}" -- "vstatus_main >/dev/null"
  else
    module_run vstatus_main "$ref"
  fi
}
vstatus_main()
{
  local ref=$(git_symbolic_ref ${1:-HEAD})
  if ! ref_exists "$ref"; then
    io_error "Branch '$ref' does not exist" "$moduleTracePrefix"
    return 1
  fi
  local ltag stag ntag lsuf delta tags vbranch
  ltag=$(vtag_describe $ref)
  if [[ -z $ltag ]]; then
    io_error "Version tag not found" "$moduleTracePrefix"
    return 1
  fi
  stag=${ltag%-*-g*}
  lsuf=${ltag#$stag}
  vbranch=$(vtag_get_vbranch_name $stag)

  # get the highest vtag on vbranch
  stag=$(vtag_highest $vbranch)

  ntag=$(vtag_increment "$stag" "$prerelPrefix")
  if [[ -z $lsuf ]]; then
    io_message "Already published at ${Brown}$stag" "$moduleTracePrefix" LightBlue
    [[ -z $quiet ]] && io_info "Next version      at ${Brown}$ntag" "$moduleTracePrefix"
  else
    [[ -z $quiet ]] && {
      io_info "Actual version at ${Brown}$stag" "$moduleTracePrefix"
      io_info "Next   version at ${Brown}$ntag" "$moduleTracePrefix"
    }
    delta=${lsuf%-g*}
    delta=${delta#-}
    io_info "Active branch is $(string_pad_left 3 ${Brown}$delta${Cyan}) commit[s] ahead of tag ${Brown}$stag" "$moduleTracePrefix"
  fi
  return 0
}

vstatus_run "$@"
