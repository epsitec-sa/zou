#!/bin/bash

. zoul-git-branch-select

forOpts=()
while [[ "$#" > 0 ]]; do case "$1" in
  --) shift; args+=("$@"); break;;
  -h|--help) zou-help $0; exit 0;;
  -0|--level0) level0=true;;
  -q|--quiet) quiet=true; forOpts+=($1);;
  -e|--stop-on-error) forOpts+=($1);;
  -*) echo "unknown option: $1" >&2; exit 1;;
  *) branch=$1;;
esac; shift; done

[[ -z $branch ]] && branch=$(branch_current_root_branch)

if [[ $level0 == true ]]; then
  branch_select $branch
  # TODO: implement select disabling (see branch_is_vmerge_disabled)
  if [[ -n $selectDisabled ]]; then
    repo_update_submodules --recursive
  else
    git for -s ${forOpts[@]} git select -0 $branch
    repo_commit_submodules
  fi
else
  [[ -z $quiet ]] && echo Entering "'$(repo_bundle_relative_to_path "$PWD")'"
  git select -0 $branch
fi
