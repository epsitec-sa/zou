#!/bin/bash

[[ -z $ZOUL_GIT_MODULE ]]        && . zoul-git-module
[[ -z $ZOUL_GIT_CONFIG ]]        && . zoul-git-config
[[ -z $ZOUL_GIT_COSM ]]          && . zoul-git-cosm
[[ -z $ZOUL_GIT_BRANCH_SELECT ]] && . zoul-git-branch-select

select_parse()
{
  while [[ "$#" > 0 ]]; do case "$1" in
    --) shift; args+=("$@"); break;;
    -h|--help) zou-help $0; exit 0;;
    -e|--stop-on-error) stopOnError=true;;
    -j*)                jobsCount=${1#-j};;
    .)                  unset recursive;;
    -a|--all)           noSkuFilter=true;;
    --dev)              selectHint='dev';;
    --cosm)             commitSubmodules=true;;
    -*) io_error "unknown option '$1'"; return 1;;
    *) sku=$1;;
  esac; shift; done
}
select_run()
{
  # parse command line
  local jobsCount stopOnError noSkuFilter selectHint commitSubmodules sku recursive=true
  select_parse "$@" || return $?

  local selectScopes=( config_scope cosm_scope )
  
  io_message "Selecting, please wait...\n"

  module_run "${selectScopes[@]}" select_main
}
select_main()
{
  local ec=0
  if [[ -z $sku ]]; then
    sku=$bundleBranch
    select_tree
  else
    if [[ "$moduleRoot" == "$bundleRoot" ]]; then
      select_tree
    else
      module_visit "$bundleRoot" "${selectScopes[@]}" select_tree
    fi
  fi
}
select_tree()
{
  # ZOU_TRACE=true io_trace "select_tree $(print_vars sku selectHint)"

  select_prolog || ec=$?
  [[ $ec -ne 0 && $stopOnError == true ]] && return $ec

  [[ $recursive == true ]] && {
    select_submodules || ec=$?
    [[ $ec -ne 0 && $stopOnError == true ]] && return $ec
  }
  
  select_epilog || ec=$
  return $ec
}
select_prolog()
{
  # repo_require_clean_work_tree 'Cannot select' || return 1

  local hint=$selectHint forceCheckout=true skipVNodes allowDuplicateTags branchOrTag
  [[ -z $hint && $moduleRoot == $bundleRoot ]] && { hint='dev'; skipVNodes=false; } || skipVNodes=true
  [[ $moduleRoot == $bundleRoot ]] && allowDuplicateTags=true

  # ZOUL_TRACE=true io_trace "select_prolog -- $(print_vars recursive noSkuFilter commitSubmodules sku hint forceCheckout skipVNodes allowDuplicateTags)"
  branch_set_select_auto "$sku" "$hint" "$forceCheckout" "$skipVNodes" "$allowDuplicateTags"
}
select_epilog()
{
  cosm_process_unstaged_submodules
}
select_submodules()
{
  module_visit_submodules_async 'configSelectInclude[@]' "${selectScopes[@]}" 'select_tree'
}

select_run  "$@"
