#! /bin/sh

declare -A Colors
Colors[Default]='0'
Colors[Black]='0;30'
Colors[Blue]='0;34'
Colors[Green]='0;32'
Colors[Cyan]='0;36'
Colors[Red]='0;31'
Colors[Purple]='0;35'
Colors[Brown]='0;33'
Colors[LightGray]='0;37'
Colors[DarkGray]='1;30'
Colors[LightBlue]='1;34'
Colors[LightGreen]='1;32'
Colors[LightCyan]='1;36'
Colors[LightRed]='1;31'
Colors[LightPurple]='1;35'
Colors[Yellow]='1;33'
Colors[White]='1;37'

# GetColorEscapeSequence Cyan    => \033[0;36m
# GetColorEscapeSequence Default => \033[0m

GetColorEscapeSequence()
{
     echo "\033[${Colors[$1]}m";
}
# usage: Colorize Cyan 'my message'
Colorize()
{
    local color=$(GetColorEscapeSequence $1); shift
    printf "$color%b\033[0m" "$@"
}