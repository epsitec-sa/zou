#!/bin/bash

[[ -z $ZOUL_GIT_MODULE ]]      && . zoul-git-module
[[ -z $ZOUL_GIT_BRABCH_CORE ]] && . zoul-git-branch-core

attach_parse()
{
  while [[ "$#" > 0 ]]; do case "$1" in
    -h|--help) zou-help $0; exit 0;;
    -r|--recursive) recursive=true;;
    -d|--dev)       attachHint='dev';;
    -p|--prod)      attachHint='prod';;
    -*)             forOpts+=($1);;
  esac; shift; done
}

attach_run()
{
  local recursive forOpts=() attachHint
  attach_parse "$@" || return $?

  if [[ $recursive = true ]]; then
    . git-for "${forOpts[@]}" -- 'attach_node'
  else
    local useLongModuleTracePrefix=true
    module_run attach_node
  fi
}
attach_node()
{
  branch_try_attach 'HEAD'
}

attach_run "$@"
