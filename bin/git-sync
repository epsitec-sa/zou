#!/bin/bash

. zoul-git-branch-sync

cmdOpts=()
forOpts=()
while [[ "$#" > 0 ]]; do case "$1" in
  -h|--help) zou-help $0; exit 0;;
  -k|--keep-submodules) KEEP_SUBMODULES=true; cmdOpts+=($1);;
  -0|--level0) level0=true;;
  -q|--quiet| \
  -s|--sm-only| \
  -e|--stop-on-error) forOpts+=($1);;
  -*) echo "unknown option: $1" >&2; exit 1;;
  *) ;;
esac; shift; done

export KEEP_SUBMODULES

if [[ $level0 == true ]]; then
  branch_sync_all
# elif [[ -z $KEEP_SUBMODULES ]]; then
#   git for -l -r ${forOpts[@]} git sync -0 ${cmdOpts[@]}
else
  git for -r ${forOpts[@]} git sync -0 ${cmdOpts[@]}
fi