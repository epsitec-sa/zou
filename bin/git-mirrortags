#!/bin/bash

[[ -z $ZOUL_GIT_MODULE ]] && . zoul-git-module

mtags_parse()
{
  while [[ "$#" > 0 ]]; do case "$1" in
    -h|--help) zou-help $0; exit 0;;
    -r|--recursive) recursive=true;;
    -*) forOpts+=($1);;
  esac; shift; done
}
mtags_run()
{
  local recursive forOpts=()
  mtags_parse "$@" || return $?

  if [[ $recursive = true ]]; then
    . git-for "${forOpts[@]}" -- 'mtags_node'
  else
    module_run mtags_node
  fi
}
mtags_node()
{
  local tag line
  io_info "Pushing tags..." "$moduleTracePrefix"
  (git push --tags --prune -f 2>&1) | \
  while read line; do
    [[ -z $line ]] && continue
    if [[ $line =~ ^.*\[new\ tag\][[:blank:]]+(.*)$ ]]; then
      io_message "  ${BASH_REMATCH[1]}" "$moduleTracePrefix" LightGray
    else
      io_message "  $line" "$moduleTracePrefix" LightGray
    fi
  done
}

mtags_run "$@"
