#!/bin/bash

. zoul-config

while [[ "$#" > 0 ]]; do case "$1" in
  -h|--help) zou-help $0; exit 0;;
  -r|--reset) resetConfig=true;;
  -*) echo "unknown option: $1" >&2; exit 1;;
esac; shift; done

[[ $resetConfig == true ]] && config_reset
config_setup

#synchronize global zou tools
cd $zou_binDir
git sync -0
cd - >/dev/null
