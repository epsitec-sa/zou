#!/bin/bash

enumerator='repo_list_unstaged_clean_submodules'
forOpts=()
while [[ "$#" > 0 ]]; do case "$1" in
  --) shift; args+=("$@"); break;;
  -h|--help) zou-help $0; exit 0;;
  -f|--force) enumerator='repo_list_unstaged_submodules';;
  -*) forOpts+=($1);;
esac; shift; done

cosm_node()
{
  repo_commit_submodule_enumerator "$enumerator"

  if [[ $enumerator =~ '_clean' ]]; then
    local unstaged=( $(repo_list_unstaged_submodules) )
    if [ ${#unstaged[@]} -ne 0 ]; then
      if [ ${#unstaged[@]} -eq 1 ]; then
        io_message "Submodule '${unstaged[0]}' is dirty and has not been commited." "[$moduleId]" Purple
      else
        io_message "Submodules '$(string_join ', ' ${unstaged[@]})' are dirty and have not been commited." "[$moduleId]" Purple
      fi
      io_message "  use 'git cosm -f' to force a commit." "[$moduleId]" Purple
    fi
  fi
}

. git-for --bottom-up --ancestors "${forOpts[@]}" -- 'cosm_node'
  