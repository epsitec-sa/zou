#!/usr/bin/env bash

[[ -z $ZOUL_STDIO ]] && . zoul-stdio

printf "\n"
io_message "${Brown}This command has been deprecated to avoid merging issues during the ${VC}git prod release${Brown} phase."
io_message "${Brown}Submodules references should never be commited to development branches separately."
io_message "${Brown}They are commited/merged to production and development branches during the ${VC}git prod release${Brown} phase."
io_message "${Brown}They may also be commited/merged earlier during the ${VC}git dev release${Brown} phase using the ${VC}--cosm${Brown} option."
printf "\n"