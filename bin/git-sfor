#! /bin/sh

for_opts=('-s')
args=()

while [[ "$#" > 0 ]]; do case "$1" in
  --) shift; args+=("$@"); break;;
  -h|--help) zou-help $0; exit 0;;
  -q|--quiet)     for_opts+=('--quiet');;
  -r|--recursive) for_opts+=('--recursive');;
  *) args+=("$1");;
esac; shift; done

git for "${for_opts[@]}" -- "${args[@]}"
