  "version": "0.2.0",
  "configurations": [
    {
      "type": "bashdb",
      "request": "launch",
      "terminalKind" : "integrated",
      "name": "Bash-Debug (select script from list of sh files)",
      "cwd": "${workspaceFolder}",
      "program": "${command:SelectScriptName}",
      "args": []
    },
    {
      "type": "bashdb",
      "request": "launch",
      "terminalKind" : "integrated",
      "name": "Bash-Debug (simplest configuration)",
      "pathBashdb": "/usr/bin/bashdb",
      "pathBashdbLib": "/usr/share/bashdb",
      "program": "${file}",
      "args": [ "enter" ],
      "cwd": "${workspaceFolder}"
    }
  ]
}
