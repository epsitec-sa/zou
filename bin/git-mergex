#!/bin/bash

. zoul-git-branch-merge

args=()
while [[ "$#" > 0 ]]; do case "$1" in
  -h|--help) zou-help $0; exit 0;;
  -y|--sync) mergeAction='_sync';;
  -*) io_error "unknown option: $1"; exit 1;;
  *) args+=( "$1" );;
esac; shift; done

toMerge=${args[0]}
intoBranch=${args[1]:-$(branch_current)}

"branch_merge$mergeAction" "$toMerge" "$intoBranch"