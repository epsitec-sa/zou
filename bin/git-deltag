#!/bin/bash

[[ -z $ZOUL_GIT_TAG ]]    && . zoul-git-tag
[[ -z $ZOUL_GIT_MODULE ]] && . zoul-git-module

deltag_parse()
{
  while [[ "$#" > 0 ]]; do case "$1" in
    -h|--help) zou-help $0; exit 0;;
    --debug) debug=true;;
    -*) io_error "unknown option: $1"; exit 1;;
    *) args+=("$1");;
  esac; shift; done
}

deltag_run()
{
  local args=()
  deltag_parse "$@" || return $?

  module_run deltag_main "${args[@]}"
}
deltag_main()
{
  local tag=$1
  tag_delete "$tag"
}

deltag_run "$@"
