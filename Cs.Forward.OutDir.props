<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
         InitialTargets="CsForwardOutDirTrace">

  <PropertyGroup>
    <!-- Always forward OutDir property to C# projects. -->
    <ForwardOutDir Condition="'$(ForwardOutDir)' == ''">$(OutDir)</ForwardOutDir>
    <ForwardOutDir Condition="'$(ForwardOutDir)' == '' And '$(OutDirSpecified)' == 'true'">$(OutDir)</ForwardOutDir>
  </PropertyGroup>

  <Target Name="CsForwardOutDirTrace">
    <Message Importance="normal" Text="ForwardOutDir = $(ForwardOutDir)" />
  </Target>
</Project>