<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Main" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="..\zou.props"/>
  <PropertyGroup>
    <Interactive>true</Interactive>
  </PropertyGroup>
  
  <Target Name="Main">
    <Prompt Text="Tell me your name:" Condition="'$(Interactive)' == 'True'" >
         <Output TaskParameter="UserInput" PropertyName="PersonName" />
    </Prompt>
     <Message Text="Hello $(PersonName)" />
    <Prompt Condition="'$(Interactive)' == 'True'" />
  </Target>

</Project>