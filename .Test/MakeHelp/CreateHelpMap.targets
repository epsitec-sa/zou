<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="..\..\zou.props"/>

  <Target Name="Build">
    <ReadLinesFromFile File="resource.hm">
      <Output TaskParameter="Lines" ItemName="HelpIds" />
    </ReadLinesFromFile>
    <ReadLinesFromFile File="synonymtopics.txt">
      <Output TaskParameter="Lines" ItemName="Synonyms" />
    </ReadLinesFromFile>
    <ItemGroup>
      <_Temporary Include="$(BundleDir)libcompta\Help\de\**\*.htm" />
      <Topics Include="@(_Temporary->'%(FileName)')" />
      <_Temporary Remove="@(_Temporary)" />
    </ItemGroup>
    
    <CreateHelpMap HelpIds="@(HelpIds)" Topics="@(Topics)" Synonyms="@(Synonyms)">
      <Output TaskParameter="Items" ItemName="_Temporary" />
    </CreateHelpMap>
    <Message Importance="high" Text="%(_Temporary.Identity)" />
    <ItemGroup>
      <_Temporary Remove="@(_Temporary)" />
    </ItemGroup>
  </Target>
</Project>