<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Domain" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="..\..\zou.props"/>

  <PropertyGroup>
    <NoPotCreationDate Condition="'$(NoPotCreationDate)' == ''">true</NoPotCreationDate>
    <NoPoRevisionDate  Condition="'$(NoPoRevisionDate)'  == ''">true</NoPoRevisionDate>
  </PropertyGroup>

  <Target Name="Bundle">
    <ItemGroup>
      <PoFile Include="$(BundleDir).po\zou-dev.fr-CH.po">
        <Bundle>$(BundleName)</Bundle>
        <NoPotCreationDate>$(NoPotCreationDate)</NoPotCreationDate>
        <NoRevisionDate>$(NoPoRevisionDate)</NoRevisionDate>
      </PoFile>
    </ItemGroup>
    <CleanPoFile SourceFiles="@(PoFile)" />
  </Target>

  <Target Name="Module">
    <ItemGroup>
      <PoFile Include="$(ZouDir).po\zou.fr-CH.po">
        <Bundle>$(BundleName)</Bundle>
        <Module>$(ModuleName)</Module>
        <NoPotCreationDate>$(NoPotCreationDate)</NoPotCreationDate>
        <NoRevisionDate>$(NoPoRevisionDate)</NoRevisionDate>
      </PoFile>
    </ItemGroup>
    <CleanPoFile SourceFiles="@(PoFile)" />
  </Target>

  <Target Name="Domain">
    <ItemGroup>
      <PoFile Include="$(ZouDir).Test\PoResource\Lib1\Resource\Lib1.fr-CH.po">
        <Bundle>$(BundleName)</Bundle>
        <Module>$(ModuleName)</Module>
        <Domain>Lib1</Domain>
        <NoPotCreationDate>$(NoPotCreationDate)</NoPotCreationDate>
        <NoRevisionDate>$(NoPoRevisionDate)</NoRevisionDate>
      </PoFile>
    </ItemGroup>
    <CleanPoFile SourceFiles="@(PoFile)" />
  </Target>
</Project>