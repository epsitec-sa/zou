<?xml version="1.0" encoding="utf-8"?>
<!--
Import this MSBuild property sheet into your project to resolve the NT Version (supports override in zou.local folder).
For example:

  <ImportGroup Label="PropertySheets">
    <Import Project="zou\Cpp.NTVersion.props" />
  </ImportGroup>

-->
<Project ToolsVersion="4.0" InitialTargets="CppNTVersionTrace" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Condition="'$(Zou)' == ''">
    <Import Project="private\zou.targets"/>
  </ImportGroup>

  <PropertyGroup>
    <_PropertySheetDisplayName>zou - NT Version...</_PropertySheetDisplayName>
  </PropertyGroup>

  <PropertyGroup Condition="'$(ZouNTVersionPath)' == '' And '$(Zou1Dir)' != '' And Exists('$(Zou1Dir)$(MSBuildThisFile)')">
    <ZouNTVersionPath>$(Zou1Dir)$(MSBuildThisFile)</ZouNTVersionPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(ZouNTVersionPath)' == '' And '$(Zou2Dir)' != '' And Exists('$(Zou2Dir)$(MSBuildThisFile)')">
    <ZouNTVersionPath>$(Zou2Dir)$(MSBuildThisFile)</ZouNTVersionPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(ZouNTVersionPath)' == '' And '$(Zou3Dir)' != '' And Exists('$(Zou3Dir)$(MSBuildThisFile)')">
    <ZouNTVersionPath>$(Zou3Dir)$(MSBuildThisFile)</ZouNTVersionPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(ZouNTVersionPath)' == '' And '$(Zou4Dir)' != '' And Exists('$(Zou4Dir)$(MSBuildThisFile)')">
    <ZouNTVersionPath>$(Zou4Dir)$(MSBuildThisFile)</ZouNTVersionPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(ZouNTVersionPath)' == '' And '$(Zou5Dir)' != '' And Exists('$(Zou5Dir)$(MSBuildThisFile)')">
    <ZouNTVersionPath>$(Zou5Dir)$(MSBuildThisFile)</ZouNTVersionPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(ZouNTVersionPath)' == '' And '$(Zou6Dir)' != '' And Exists('$(Zou6Dir)$(MSBuildThisFile)')">
    <ZouNTVersionPath>$(Zou6Dir)$(MSBuildThisFile)</ZouNTVersionPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(ZouNTVersionPath)' == '' And '$(Zou7Dir)' != '' And Exists('$(Zou7Dir)$(MSBuildThisFile)')">
    <ZouNTVersionPath>$(Zou7Dir)$(MSBuildThisFile)</ZouNTVersionPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(ZouNTVersionPath)' == '' And '$(ZouDir)' != '' And Exists('$(ZouDir)$(MSBuildThisFile)')">
    <ZouNTVersionPath>$(ZouDir)$(MSBuildThisFileName).Default$(MSBuildThisFileExtension)</ZouNTVersionPath>
  </PropertyGroup>

  
  <ImportGroup Label="PropertySheets">
    <Import Project="$(ZouNTVersionPath)" />
  </ImportGroup>
  
  <ItemDefinitionGroup>
    <ClCompile>
      <PreprocessorDefinitions>_WIN32_WINNT=$(NTVersion);%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>

  <Target Name="CppNTVersionTrace">
    <Message Text="ZouNTVersionPath=$(ZouNTVersionPath)" />
    <Message Text="NTVersion=$(NTVersion)" />
  </Target>
</Project>