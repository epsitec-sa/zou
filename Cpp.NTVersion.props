<?xml version="1.0" encoding="utf-8"?>
<!--
Import this MSBuild property sheet into your project to resolve the NT Version (supports override in zou.local folder).
For example:

  <ImportGroup Label="PropertySheets">
    <Import Project="zou\Cpp.NTVersion.props" />
  </ImportGroup>

-->
<Project ToolsVersion="4.0" InitialTargets="CppNTVersionTrace" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Condition="'$(Zou)' == ''" Project="private\zou.targets" />

  <PropertyGroup>
    <_PropertySheetDisplayName>zou - NT Version...</_PropertySheetDisplayName>
  </PropertyGroup>

  <ImportGroup Label="PropertySheets">
    <Import Condition="'$(NTVersion)' == ''" Project="$(ZouBundleDir)**\$(MSBuildThisFile)" />
    <Import Condition="'$(NTVersion)' == ''" Project="$(ZouSolutionDir)**\$(MSBuildThisFile)" />
    <Import Condition="'$(NTVersion)' == ''" Project="$(ZouProjectDir)**\$(MSBuildThisFile)" />
    <Import Condition="'$(NTVersion)' == ''" Project="$(ZouDir)$(MSBuildThisFileName).Default$(MSBuildThisFileExtension)" />
  </ImportGroup>
  
  <ItemDefinitionGroup>
    <ClCompile>
      <PreprocessorDefinitions>_WIN32_WINNT=$(NTVersion);%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>

  <Target Name="CppNTVersionTrace">
    <Message Text="NTVersion=$(NTVersion)" />
  </Target>
</Project>