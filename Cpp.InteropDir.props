<?xml version="1.0" encoding="utf-8"?>
<!--
This property sheet resolves the 'OutDir'and 'IntDir' properties for C++ interop projects (supports override in zou.cfg folder).
Use the Property Manager to import it into your interop project.
-->
<Project ToolsVersion="4.0" InitialTargets="CppInteropDirTrace" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Condition="'$(Zou)' == ''" Project="private\zou.targets" />

  <PropertyGroup>
    <_PropertySheetDisplayName>zou - C++ Interop Directories...</_PropertySheetDisplayName>
  </PropertyGroup>

  <ImportGroup Label="PropertySheets">
    <Import Project="$(ZouBundleDir)**\$(MSBuildThisFile)"   Condition="'$(CppOutDir)' == ''" />
    <Import Project="$(ZouSolutionDir)**\$(MSBuildThisFile)" Condition="'$(CppOutDir)' == '' And '$(ZouSolutionDir)' != '' And '$(ZouSolutionDir)' != '$(ZouBundleDir)'" />
    <Import Project="$(ZouProjectDir)**\$(MSBuildThisFile)"  Condition="'$(CppOutDir)' == '' And '$(ZouProjectDir)'  != '' And '$(ZouProjectDir)'  != '$(ZouSolutionDir)' And '$(ZouProjectDir)' != '$(ZouBundleDir)'" />
    <Import Project="$(ZouDir)$(MSBuildThisFileName).Default$(MSBuildThisFileExtension)" Condition="'$(CppOutDir)' == ''" />
  </ImportGroup>

  <PropertyGroup>
    <OutDir>$(CppOutDir)</OutDir>
    <IntDir>$(CppIntDir)</IntDir>
  </PropertyGroup>
  
  <Target Name="CppInteropDirTrace">
    <Message Text="OutDir=$(OutDir)" />
    <Message Text="IntDir=$(IntDir)" />
  </Target>
</Project>