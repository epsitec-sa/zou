<?xml version="1.0" encoding="utf-8"?>
<!-- This property sheet resolves the 'AsmDir'property (supports override in zou.cfg folder). -->
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
         InitialTargets="DbgDirTrace"
         TreatAsLocalProperty="DbgDir">
  
  <PropertyGroup>
    <DbgDir Condition="'$(DbgDir)' != '' and !HasTrailingSlash('$(DbgDir)')">$(DbgDir)/</DbgDir>
  </PropertyGroup>

  <!-- Ensure DbgDir is absolute -->
  <Choose>
    <When Condition="'$(DbgDirSpecified)' == 'true'">
      <PropertyGroup>
        <DbgDir>$([System.IO.Path]::Combine($(MSBuildStartupDirectory),$(DbgDir)))</DbgDir>
      </PropertyGroup>
    </When>
    <When Condition="'$(WorkDirSpecified)' == 'true'">
      <PropertyGroup>
        <DbgDir>$([System.IO.Path]::Combine($(WorkDir),$(DbgDir)))</DbgDir>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <DbgDir>$([System.IO.Path]::Combine($(ProjectDir),$(DbgDir)))</DbgDir>
      </PropertyGroup>
    </Otherwise>
  </Choose>

  <PropertyGroup>
    <DbgProjDir>$(DbgDir)$(BundleRelativeProjectName)/</DbgProjDir>
  </PropertyGroup>

  <Target Name="DbgDirTrace" Condition="'$(ZouTraceProps)' == 'true'">
    <Message Importance="normal" Text="DbgDirSpecified = $(DbgDirSpecified)" />
    <Message Importance="normal" Text="DbgDir          = $(DbgDir)" />
    <Message Importance="normal" Text="DbgProjDir      = $(DbgProjDir)" />
  </Target>
</Project>