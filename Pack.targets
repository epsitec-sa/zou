<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Condition="'$(Zou)' == ''" Project="zou.props" />

  <!-- Default includes and excludes for package builder -->
  <ItemGroup>
    <ProdBinInclude Include="$(TargetDir)**\*" />
    <ProdBinExclude Include="$(TargetDir)**\*.pdb" />
    <ProdBinExclude Include="$(TargetDir)**\*.map" />
    <ProdBinExclude Include="$(TargetDir)**\*.lib" />
    <ProdBinExclude Include="$(TargetDir)**\*.exp" />

    <ProdDbgInclude Include="$(TargetDir)**\*.pdb" />
    <ProdDbgInclude Include="$(TargetDir)**\*.map" />
    <ProdDbgInclude Include="$(DbgDir)**\*.cod" />

    <DevBinInclude Include="$(TargetDir)**\*" />
    <DevCodInclude Include="$(DbgDir)**\*.cod" />
  </ItemGroup>

  <!-- Package builder -->
  <ItemGroup>
    <!-- Production package -->
    <ImportFiles Include="@(ProdBinInclude)" Exclude="@(ProdBinExclude)">
      <ImportDir>$(PkgProdBinDir)</ImportDir>
    </ImportFiles>
    <ImportFiles Include="@(ProdDbgInclude)">
      <ImportDir>$(PkgProdDbgDir)</ImportDir>
    </ImportFiles>

    <!-- Developer package -->
    <ImportFiles Include="@(DevBinInclude)">
      <ImportDir>$(PkgDevBinDir)</ImportDir>
    </ImportFiles>
    <ImportFiles Include="@(DevCodInclude)">
      <ImportDir>$(PkgDevCodDir)</ImportDir>
    </ImportFiles>
  </ItemGroup>

  <Import Project="ImportFiles.targets" />
</Project>