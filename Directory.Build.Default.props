<!-- Defines the default metadata for VS2017 .NET projects (prolog) -->
<Project InitialTargets="CheckVersion">
  <!-- Default properties (can be overloaded in bundle after importing this script) -->
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <RuntimeIdentifiers>win-x64;osx-x64;linux-x64</RuntimeIdentifiers>
    <Company>Epsitec</Company>
  </PropertyGroup>
  
  <!-- Debug info-->
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DebugType>full</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>

  <!-- Versioning -->
  <PropertyGroup Condition ="'$(AssemblyVersion)' == ''">
    <AssemblyVersionUndefined>true</AssemblyVersionUndefined>
    <AssemblyVersion>0.1.0</AssemblyVersion>
  </PropertyGroup>
  <PropertyGroup>
    <Version Condition="'$(Version)' == ''">$(AssemblyVersion)</Version>
    <AssemblyFileVersion Condition="'$(AssemblyFileVersion)' == ''">$(AssemblyVersion)</AssemblyFileVersion>
    <FileVersion Condition="'$(FileVersion)' == ''">$(AssemblyFileVersion)</FileVersion>
  </PropertyGroup>
  <Target Name="CheckVersion" Condition="'$(MSBuildProjectExtension)' == '.csproj'">
    <Warning Text="AssemblyVersion property not defined, using default version: $(AssemblyVersion)" Condition="'$(AssemblyVersionUndefined)' == 'true'" />
  </Target>
  
  <!-- Compiler -->
  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <Deterministic>true</Deterministic>
  </PropertyGroup>

</Project>
