<?xml version="1.0" encoding="utf-8"?>
<!--
Import this script at the end of a C++ project in the ExtensionSettings ImportGroup
-->
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ImportGroup Label="ExtensionTargets">
    <Import Project="$(NugetPackagesDir)VisualLeakDetector.$(VldVersion)/build/native/VisualLeakDetector.targets" Condition="Exists('$(NugetPackagesDir)VisualLeakDetector.$(VldVersion)/build/native/VisualLeakDetector.targets')" />
  </ImportGroup>
  
  <Target Name="_CppVldImportCheck" BeforeTargets="PrepareForBuild">
    <Message Condition="!Exists('packages.config')" Text="packages.config not found" Importance="high" />
    <PropertyGroup>
      <ErrorText>This project references NuGet package(s) that are missing on this computer. Use NuGet Package Restore to download them.  For more information, see http://go.microsoft.com/fwlink/?LinkID=322105. The missing file is {0}.</ErrorText>
    </PropertyGroup>
    <Error Condition="!Exists('$(NugetPackagesDir)VisualLeakDetector.$(VldVersion)/build/native/VisualLeakDetector.targets')" Text="$([System.String]::Format('$(ErrorText)', '$(NugetPackagesDir)VisualLeakDetector.$(VldVersion)/build/native/VisualLeakDetector.targets'))" />
  </Target>

</Project>