PoBundle    = msgcat  (culture, PoBundle, PoModule.References, PoDomain.References)

Source      = *.cs
PotDomain   = xgettext(Source)

PotModule   = PotDomain (if PotModule not Initialized)
PotModule   = msgcat  (anyCulture, PotModule, PotProject)             // aggregate msgid

foreach (poResourceItem)
{
    PoBundle    = msginit (PotProject)  (if PoBundle not Initialized)
    PoModule    = msginit (PotModule)   (if PoModule not Initialized)
    PoDomain    = msginit (PotDomain)   (if PoDomain not initialized)

    PoBundle    = msgcat  (culture, PoBundle, PoModule)               // aggregate msgstr (translations)
    PoBundle    = msgcat  (culture, PoBundle, PoProject)              // aggregate msgstr (translations)

    PoModule    = msgmerge(culture, -C PoBundle, nul, PotModule)      // give priority to PoBundle translations
    PoDomain    = msgmerge(culture, -C PoBundle, nul, PoDomain)       // give priority to PoBundle translations

    MoDomain    = msgfmt(PoDomain)
    
    PoBundle.Time = PoModule.Time = PoDomain.Time = MoDomain.Time
}

