        domain1.de-CH.po
        domain2.fr-CH.po
        domain2.de-CH.po
        
      obj\$(Configuration)\                             $(PotDomainDir)
        domain1.Sources.txt                             %(PoResource.PotSourceReferencesPath)
        domain1.pot                                     %(PoResource.PotDomainPath)
