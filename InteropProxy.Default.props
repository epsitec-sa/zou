<?xml version="1.0" encoding="utf-8"?>
<!--
The InteropProxy.Default.props defines the default C++ interop proxy output directory relative to its project folder.
-->
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
         InitialTargets="InteropProxyDefaultTrace">
  
  <PropertyGroup>
    <InteropPlatform Condition="'$(InteropPlatform)' == ''">Win32</InteropPlatform>
    <InteropDir      Condition="'$(InteropDir)'      == ''">$(InteropPlatform)\iproxy\bin\$(Configuration)\</InteropDir>
  </PropertyGroup>

  <!-- ================ InteropTrace ================ -->
  
  <Target Name="InteropProxyDefaultTrace">
    <Message Text="InteropPlatform = $(InteropPlatform)" />
    <Message Text="InteropDir      = $(InteropDir)" />
  </Target>
</Project>