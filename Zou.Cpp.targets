<?xml version="1.0" encoding="utf-8"?>
<!-- Import this script at the end of a C++ project like this:
 
  [ImportGroup Label = "ExtensionTargets"]
    [Import Project = "$(ZouDir)Zou.Cpp.targets" /]
  [/ ImportGroup]
 
 -->

<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="$(MSBuildThisFileDirectory)Cpp.Boost.targets"
          Condition="'$(ConfigurationType)' == 'StaticLibrary' Or '$(ConfigurationType)' == 'DynamicLibrary' Or '$(ConfigurationType)' == 'Application'"/>
  <Import Project="$(MSBuildThisFileDirectory)Cpp.HelpProject.targets"/>

</Project>