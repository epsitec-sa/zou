<!--
Import this script at the end of a C++ project like this:
 
  [Import Project="$(VCTargetsPath)\Microsoft.Cpp.targets"/]
  
  [ImportGroup Label = "ExtensionTargets"]
    [Import Project = "$(ZouDir)Zou.Cpp.targets"/]
  [/ ImportGroup]
 
Summary:
  + packages.config visibility in VS
  + BoostEnabled
  # Cpp.Boost.targets
  # Cpp.Vld.targets
  # Zou.Cpp.Base.targets
    # Cpp.Ducible.targets
    # ImportFile.targets

 -->
<Project>

  <!-- Ensure packages.config appears in VS solution explorer -->
  <ItemGroup Condition="'$(ConfigurationType)' == 'StaticLibrary' Or '$(ConfigurationType)' == 'DynamicLibrary' Or '$(ConfigurationType)' == 'Application'">
    <None Include="packages.config" Condition="'@(None)' == '' Or !@(None->AnyHaveMetadataValue('Identity', 'packages.config'))">
      <SubType>Designer</SubType>
    </None>
  </ItemGroup>

  <PropertyGroup>
    <BoostEnabled Condition="'$(BoostEnabled)' == ''">true</BoostEnabled>
  </PropertyGroup>

  <Import Project="$(MSBuildThisFileDirectory)Cpp.Boost.targets"
          Condition="'$(BoostEnabled)' == 'true' And ('$(ConfigurationType)' == 'StaticLibrary' Or '$(ConfigurationType)' == 'DynamicLibrary' Or '$(ConfigurationType)' == 'Application')"/>

  <!--
  Ensure vld.ini appears in VS solution explorer ('vld.ini' should appear verbatim in the Include attribute)
  WARNING: should not depend on the EnableVLD property - so do not move this code in the Cpp.Vld.targets script!
  -->
  <!--<ItemGroup Condition="'$(ConfigurationType)' == 'Application'">
    <None Include="$(ProjectDir)vld.ini" />
  </ItemGroup>-->

  <Import Project="$(MSBuildThisFileDirectory)Cpp.Vld.targets"
          Condition="'$(EnableVLD)' == 'true' And ('$(ConfigurationType)' == 'Application' Or '$(ConfigurationType)' == 'DynamicLibrary')"/>

  <Import Project="$(MSBuildThisFileDirectory)Zou.Cpp.Base.targets"/>
</Project>
