<?xml version="1.0" encoding="utf-8"?>
<!--
Import this MSBuild property sheet into your project to resolve the NT Version (supports override in zoul folder).
For example:

  <ImportGroup Label="PropertySheets">
    <Import Project="zou\Cpp.Version.props" />
  </ImportGroup>
-->
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <_PropertySheetDisplayName>zou - NT Version (virtual)</_PropertySheetDisplayName>
  </PropertyGroup>
  <PropertyGroup>
	<ZolVersionPath>$(MSBuildThisFileDirectory)\..\zol\Cpp.Version.props</ZolVersionPath>
	<ZouVersionPath>$(MSBuildThisFileDirectory)\Cpp.Version.Default.props</ZouVersionPath>
  </PropertyGroup>
  <ImportGroup Label="PropertySheets">
    <Import Project="$(ZolVersionPath)" Condition="Exists('$(ZolVersionPath)')" />
    <Import Project="$(ZouVersionPath)" Condition="!Exists('$(ZolVersionPath)')" />
  </ImportGroup>
</Project>